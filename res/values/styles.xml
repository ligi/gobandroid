	<style name="base_theme" parent="Theme.Sherlock.Light">
		<!--	<item name="Background">@android:color/transparent</item> 
		<item name="android:textColor">#ff000000</item> -->
		<item name="android:alertDialogStyle">@style/dialog_theme</item>
		<item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
		<item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
		<item name="android:windowBackground">@drawable/shinkaya</item>
		
	</style>

	<style name="topic_divider">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/topic_bg</item>
		<item name="android:paddingLeft">7pt</item>
	</style>
	
	<style name="default_activity_main" parent="base_theme">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	</style>
	
	<style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@null</item>
    </style> 


	<style name="Theme.Transparent"  parent="Theme.Sherlock.Light.NoActionBar">
	    <item name="android:windowIsTranslucent">true</item>
	    <item name="android:windowBackground">@android:color/transparent</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:backgroundDimEnabled">false</item>
  	</style>
</resources>